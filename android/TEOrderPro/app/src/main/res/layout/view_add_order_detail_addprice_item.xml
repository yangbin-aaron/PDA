<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <TextView
        android:id="@+id/view_add_order_detail_addprice_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/view_add_order_detail_addprice_price_textview"
        android:layout_weight="2"
        android:gravity="right"
        android:text="@string/order_detail_str_addprice"/>

    <TextView
        android:id="@+id/view_add_order_detail_addprice_price_textview"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="$ 0.5"/>

</RelativeLayout>

