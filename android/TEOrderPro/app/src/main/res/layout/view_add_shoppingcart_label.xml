<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <TextView
        android:id="@+id/view_add_shoppingcart_label_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/view_add_shoppingcart_label_price_textview"
        android:layout_weight="2"
        android:gravity="right"
        android:text="小丸子"/>

    <TextView
        android:id="@+id/view_add_shoppingcart_label_price_textview"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/copies_layout"
        android:gravity="left"
        android:paddingLeft="12dp"
        android:text="$ 0.5"/>

    <RelativeLayout
        android:id="@+id/copies_layout"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/x_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="x"/>

        <TextView
            android:id="@+id/view_add_shoppingcart_label_copies_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:text="1"/>
    </RelativeLayout>
</RelativeLayout>
