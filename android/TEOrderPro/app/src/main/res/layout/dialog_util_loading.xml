<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dialog_util_loading_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="150dip"
        android:background="@drawable/dialog_rectangle_style"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_util_loading_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="loading..."
            android:textColor="@color/color_black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/dialog_title_textView"
            android:background="@color/color_gray_light"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/dialog_util_loading_imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@anim/anim_dialog_loading_list"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
