<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 按钮区域-->
    <FrameLayout
        android:id="@+id/adapter_dishinfo_listview_btn_layout"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/adapter_dishinfo_listview_minus_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/jian"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adapter_dishinfo_listview_plus_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/jia"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/adapter_dishinfo_listview_copies_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2"
            android:textSize="14sp"/>
    </FrameLayout>

    <!-- 菜名和价格-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@+id/adapter_dishinfo_listview_btn_layout"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/adapter_dishinfo_listview_dishcode_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A01"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/adapter_dishinfo_listview_dishname_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="香辣牛排"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/adapter_dishinfo_listview_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="$ 10"
            android:textColor="@color/color_red"
            android:textSize="16sp"/>
    </LinearLayout>
</RelativeLayout>
