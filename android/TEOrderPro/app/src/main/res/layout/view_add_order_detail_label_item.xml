<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <TextView
        android:id="@+id/view_add_order_detail_label_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/copies_layout"
        android:layout_weight="2"
        android:gravity="right"
        android:text="小丸子"/>

    <TextView
        android:id="@+id/view_add_order_detail_label_price_textview"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="$ 0.5"/>

    <LinearLayout
        android:id="@+id/copies_layout"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/view_add_order_detail_label_price_textview">

        <TextView
            android:id="@+id/x_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="x"/>

        <TextView
            android:id="@+id/view_add_order_detail_label_copies_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="1"/>
    </LinearLayout>
</RelativeLayout>

